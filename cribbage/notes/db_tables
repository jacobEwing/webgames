CREATE TABLE games (
id INT UNSIGNED NOT NULL AUTO_INCREMENT,
keycode VARCHAR(16) NOT NULL,
password BLOB NOT NULL,
hostcode VARCHAR(16) NOT NULL,
PRIMARY KEY(id),
UNIQUE ID(keycode));

CREATE TABLE players (
id INT UNSIGNED NOT NULL AUTO_INCREMENT,
games_keycode VARCHAR(16) NOT NULL,
name VARCHAR(64),
mode VARCHAR(32),
PRIMARY KEY(id));

